{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/public-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/worker/tsconfig.app.json"
  },
  "monorepo": true,
  "projects": {
    "public-api": {
      "type": "application",
      "root": "apps/public-api",
      "entryFile": "main",
      "sourceRoot": "apps/public-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/public-api/tsconfig.app.json",
        "assets": [
          {
            "include": "../../../libs/common/src/translate/i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/public-api"
          }
        ]
      }
    },
    "worker": {
      "type": "application",
      "root": "apps/worker",
      "entryFile": "main",
      "sourceRoot": "apps/worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/worker/tsconfig.app.json",
        "assets": [
          {
            "include": "../../../libs/common/src/translate/i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/worker"
          }
        ]
      }
    },
    "worker-schedule": {
      "type": "application",
      "root": "apps/worker-schedule",
      "entryFile": "main",
      "sourceRoot": "apps/worker-schedule/src",
      "compilerOptions": {
        "tsConfigPath": "apps/worker-schedule/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "sourceRoot": "libs/common/src",
      "entryFile": "index",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}
